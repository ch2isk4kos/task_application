= simple_form_for(@ad, html: { class: 'form-horizontal'}) do |f|
    = f.collection_select :category_id, Category.all, :id, :name, { prompt: "Choose a Category"}, input_html: { class: "dropdown-toggle" }
    = f.input :title, label: "Ad Title", input_html: { class: "form-control" }
    = f.input :description, label: "Description", input_html: { class: "form-control" }
    = f.input :company, label: "Company/Seller", input_html: { class: "form-control" }
    = f.input :url, label: 'link to ad', input_html: { class: "form-control" }
    %br/
    = f.button :submit
