%jobs
    .job
        %h1= @ad.title
        %p= @ad.description
        %p= @ad.company
        %button.btn.btn-default= link_to "Close Ad", @ad.url

#links
    = link_to "Home", root_path, class: "btn btn-sm btn-default"
    = link_to "Edit", edit_ad_path(@ad), class: "btn btn-sm btn-default"
    = link_to "Delete", ad_path(@ad), method: :delete, data: { confirm: "Are You Sure?"}, class: "btn btn-sm btn-default"
